<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="upotussam_reparaciones_form_view">
			<field name="name">Reparaciones</field>
			<field name="model">upotussam.reparacionesclass</field>
			<field name="arch" type="xml">
				<form string="Form of repairs">
					<group string="repairs">
						<group>
							<field name="descripcion" />
						</group>
						<group>
							<field name="fechaInicio" />
							<field name="fechaFin" />
						</group>
						<group>
							<field name="garantia" />
							<field name="autobus_id" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="upotussam_reparaciones_tree_view">
			<field name="name">view_upotussam_reparaciones_tree</field>
			<field name="model">upotussam.reparacionesclass</field>
			<field name="arch" type="xml">
				<tree string="tree_string">
					<field name="descripcion" />
					<field name="fechaInicio" />
					<field name="fechaFin" />
					<field name="garantia" />
					<field name="autobus_id" />
				</tree>
			</field>
		</record>

		<!-- Calendar View -->
		<record model="ir.ui.view"
			id="view_upotussam_reparaciones_calendar">
			<field name="name">view_upotussam_reparaciones_calendar</field>
			<field name="model">upotussam.reparacionesclass</field>
			<field name="type">calendar</field>
			<field name="arch" type="xml">
				<calendar string="Clases" color="descripcion"
					date_start="fechaInicio" date_stop="fechaFin" mode="month">
					<field name="descripcion" />
					<field name="garantia" />
				</calendar>
			</field>
		</record>



		<record model="ir.actions.act_window"
			id="act_reparacionclass">
			<field name="name">Reparaciones</field>
			<field name="res_model">upotussam.reparacionesclass</field>
			<field name="view_mode">tree,form,calendar</field>
		</record>

		<menuitem name="Reparaciones" id="reparacionclass_submenu"
			parent="upotussam" sequence="100" />
		<menuitem name="Ver Reparaciones" id="repairs_submenu_2"
			parent="reparacionclass_submenu" sequence="100" action="act_reparacionclass" />
	</data>
</odoo> 

